<script>
    $(".menu_item").removeClass("is_selected")
    $("#menu_manage_recruit_home_recruit").addClass("is_selected")

    const _recruitment = {{{ data.recruitment }}}

    $(".name_job_detail_job").html(_recruitment.title)

    let _date = new Date(_recruitment.due_date._seconds * 1000);
    let due_date = _date.getDate() + "/" + (_date.getMonth() + 1) + "/" + _date.getFullYear()
    $(".deadline_submit_record_detail_job").html("Hạn nộp hồ sơ: " + due_date)

    _date = new Date(_recruitment.creation_date._seconds * 1000);
    let creation_date = _date.getDate() + "/" + (_date.getMonth() + 1) + "/" + _date.getFullYear()
    $(".date_post_news_detail_job").html("Ngày đăng tin: " + creation_date)

    $("#value_salary_detail_job").html(_recruitment.min_salary + " - " + _recruitment.max_salary + " triệu")

    $("#value_number_person_detail_job").html(_recruitment.number_of_candidates + " người")

    $("#value_method_work_detail_job").html(_recruitment.working_form)

    $("#value_gender_detail_job").html(_recruitment.gender)

    $("#value_experience_detail_job").html(_recruitment.experience)

    $("#value_adress_work_detail_job").html(_recruitment.location)

    $("#value_describe_job_detail_job").html(_recruitment.description)

    $("#value_require_candidate_detail_job").html(_recruitment.requirements)

    $("#value_benefit_detail_job").html(_recruitment.benefits)

    const current_url = $(location).attr("href")
    const id_recruitment = current_url.slice(current_url.indexOf("?id=") + 4)
    $("#id_recruitment").val(id_recruitment)
</script>