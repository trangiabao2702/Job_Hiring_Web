<div class="modal fade" id="modal_apply_company" tabindex="-1" aria-labelledby="modal_updateLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title" id="exampleModalLabel">Ứng tuyển:&nbsp;<span
                        id="name_job_modal_apply_company">{{data.recruitment.title}}</span> </span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/candidate/detail_job/upload_cv" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div id="text_CV_me">CV của bạn:</div>
                    <img src="/css/style/image/ic_upload.svg" id="ic_upload_CV" alt="ic_upload_CV">

                    <input type="file" name="file" id="file" class="inputfile" required />
                    <label for="file" id="label_file">Tải CV</label>
                    <div id="text_fullname_CV">Họ và tên:</div>
                    <input type="text" name="name" id="fullname_cv" required placeholder="Nhập đầy đủ họ tên">
                    <div id="text_email_CV">Email:</div>
                    <input type="email" name="email" id="email_cv" required placeholder="Nhập email">
                    <div id="text_phone_CV">Số điện thoại</div>
                    <input type="text" name="phone" id="phone_cv" required placeholder="Nhập số điện thoại">
                    <div id="text_introduce_CV">Giới thiệu:</div>
                    <textarea name="introduce" class="form-control" id="introduce_cv" required
                        placeholder="Một vài lời giới thiệu với nhà tuyển dụng"></textarea>
                    <input type="text" name="id_recruitment" value="{{data.idDocRecruitment}}" style="display: none;">
                    <button type="button" id="close_cv" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" id="submit_cv">Nộp</button>
                </div>


            </form>
        </div>
    </div>

</div>
<div class="modal fade" id="modal_report_recruitment" tabindex="-1" aria-labelledby="modal_updateLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title" id="exampleModalLabel">Báo cáo:&nbsp;<span
                        id="name_job_modal_apply_company">{{data.recruitment.title}}</span> </span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/candidate/report_recruitment" method="post">
                <div class="modal-body modal_body_evaluate">
                    <div id="text_content_modal_report">Nội dung báo cáo:</div>
                    <textarea name="content" class="form-control" id="content_report" required
                        placeholder="Hãy ghi rõ lý do báo cáo"></textarea>
                    <input type="text" name="id_recruitments" value="{{data.idDocRecruitment}}" style="display: none;">
                    <button type="button" id="close_modal_report" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" id="submit_modal_report">Gửi</button>
                </div>
            </form>
        </div>
    </div>
</div>
