<script>
    // const list_reviews = "{{{ data.user.list_reviews }}}"
    const list_rating = {{{ data.list_reviews }}}

    for (let i = 0; i < list_rating.length; i++) {
        $("#list_item_rating").append(`
            <div class="item_evaluate">
                <img src="${list_rating[i].avatar}" class="ic_avatar_evaluate" alt="ic_avatar_evaluate" />
                <div class="name_candidate_evaluate" id="${list_rating[i].belong_candidate}">${list_rating[i].name}</div>
                <img src="/css/style/image/ic_star.svg" id="evaluate_candidate_star1" alt="evaluate_star1" />
                <img src="/css/style/image/ic_star.svg" id="evaluate_candidate_star2" alt="evaluate_star2" />
                <img src="/css/style/image/ic_star.svg" id="evaluate_candidate_star3" alt="evaluate_star3" />
                <img src="/css/style/image/ic_star.svg" id="evaluate_candidate_star4" alt="evaluate_star4" />
                <img src="/css/style/image/ic_star.svg" id="evaluate_candidate_star5" alt="evaluate_star5" />
                <div class="value_evaluate">${list_rating[i].description}</div>
            </div>
        `)
    }

    $(".name_candidate_evaluate").click(function () {
        $(location).attr("href", "/employer/profile_candidate?id=" + $(this).attr("id"))
    })
</script>