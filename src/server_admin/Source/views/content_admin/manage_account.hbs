    <a id="rectangle_candidate_new" href="/admin/manage_account/list_account_locked">
        <div id="quantity_account_banned">{{numberAccount.numberlocked}}</div>
        <div id="text_account_banned">Tài khoản bị khóa</div>
        <img src="/css/style/image/ic_locked.svg" id="ic_new_home_recruit" alt="ic_new_home_recruit">
